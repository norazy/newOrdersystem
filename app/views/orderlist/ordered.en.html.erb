<div class="menu_background-color">
    <div class="menu_background">
        <header class="menu_header clearfix">
            <div class="menu_header_left">
                <div class="menu_button orange">
                    <a href="/en/order/top">
                        <p>Order Top</p>
                    </a>
                </div>
            </div>
            <div class="menu_button_right">
                <div class="menu_button orange">
                    <%= link_to order_cashier_path, :method => :post do %>
                        <p>Checkout</p>
                 	<%end%>
                </div>
                <div class="menu_button orange">
                    <%= link_to order_staff_path, :method => :post do %>
                        <p>Waiter</p>
                 	<%end%>
                </div>
                <div class="menu_button orange">
                    <a href="/en/order/pre_order/<%= current_user.id %>">
                        <p>Cart</p>
                    </a>
                </div>
                <div class="menu_button">
                    <a href="/en/order/ordered/<%= current_user.id %>">
                        <p>Ordered</p>
                    </a>
                </div>
            </div>
        </header>
        <div class="preorder_title">
            <p>
                Review Order
            </p>
        </div>
        <div class="search_line">
            <h2></h2>
        </div>
        <div class="ordered_display">
            <div class="ordered_div">
                <div class="ordered_title">
                    <ul>
                        <li class="ordered_title_indiv width1">Menu</li>
                        <li class="ordered_title_indiv width2">Price</li>
                        <li class="ordered_title_indiv width2">Number</li>
                        <li class="ordered_title_indiv width3">State</li>
                    </ul>
                </div>
                <% @ordered.each do |order| %>
                    <div class="ordered_menu">
                        <% if order[:menu_name_en] then %>
                            <div class="ordered_menu_name">
                                <p>　<%= order[:menu_name_en] %></p>
                            </div>
                        <% else %>
                            <div class="ordered_menu_name">
                                <p>　　<%= order[:option_name_en] %></p>
                            </div>
                        <% end %>
                        <div class="ordered_menu_price">
                            <p><%= order[:price] %></p> 
                        </div>
                        <div class="ordered_menu_number">
                            <p><%= order[:number] %></p>
                        </div>
                        <div class="ordered_menu_state">
                            <p><%= order[:state_en] %></p>
                        </div>
                    </div>
                <% end %>
                <div class="ordered_sum clearfix">
                    <div class="ordered_sum_title_n_price">
                        <div class="ordered_sum_title">Total</div>
                        <div id="ordered_sum_price">
                            <p>0</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    </div>
</div>
